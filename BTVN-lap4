using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace ádsad
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
            this.Load += Form1_Load;
        }

        private void Form1_Load(object sender, EventArgs e)
        {
            comboBox1.SelectedItem = "QTKD";
            radioButton2.Checked = true;
            textBox4.Text = "0";
            textBox5.Text = "0";
        }


        private void label3_Click(object sender, EventArgs e)
        {

        }

        private void label5_Click(object sender, EventArgs e)
        {

        }

        private void label8_Click(object sender, EventArgs e)
        {

        }

        private void button1_Click(object sender, EventArgs e)
        {
            if (string.IsNullOrWhiteSpace(textBox1.Text) || 
                            string.IsNullOrWhiteSpace(textBox2.Text) || 
                            string.IsNullOrWhiteSpace(textBox3.Text))   
            {
                MessageBox.Show("VUI LONG NHAP DAY DU THONG TIN!", "THONG BAO", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                return;
            }

            string mssv = textBox1.Text.Trim();
            bool found = false;
            int rowIndex = -1;

            foreach (DataGridViewRow row in dataGridView1.Rows)
            {
                if (row.IsNewRow) continue;
                if (row.Cells["MSSV"].Value?.ToString() == mssv)
                {
                    found = true;
                    rowIndex = row.Index;
                    break;
                }
            }

            if (!found)
            {
                int idx = dataGridView1.Rows.Add();
                var row = dataGridView1.Rows[idx];
                row.Cells["MSSV"].Value = textBox1.Text.Trim();
                row.Cells["Ten"].Value = textBox2.Text.Trim();
                row.Cells["Khoa"].Value = comboBox1.SelectedItem?.ToString();
                row.Cells["GioiTinh"].Value = radioButton1.Checked ? "Nam" : "Nữ";
                row.Cells["DiemTB"].Value = textBox3.Text.Trim();

                MessageBox.Show("THEM DU LIEU MOI THANH CONG!", "THONG BAO", MessageBoxButtons.OK, MessageBoxIcon.Information);
            }
            else
            {
                var row = dataGridView1.Rows[rowIndex];
                row.Cells["Ten"].Value = textBox2.Text.Trim();
                row.Cells["Khoa"].Value = comboBox1.SelectedItem?.ToString();
                row.Cells["GioiTinh"].Value = radioButton1.Checked ? "Nam" : "Nữ";
                row.Cells["DiemTB"].Value = textBox3.Text.Trim();

                MessageBox.Show("CAP NHAT THANH CONG!", "THONG BAO", MessageBoxButtons.OK, MessageBoxIcon.Information);
            }

            int tongNam = 0, tongNu = 0;
            foreach (DataGridViewRow row in dataGridView1.Rows)
            {
                if (row.IsNewRow) continue;
                var gt = row.Cells["GioiTinh"].Value?.ToString();
                if (gt == "Nam") tongNam++;
                else if (gt == "Nữ") tongNu++;
            }
            textBox4.Text = tongNam.ToString();
            textBox5.Text = tongNu.ToString();
        }
        private void UpdateGenderCounts()
        {
            int tongNam = 0, tongNu = 0;

            foreach (DataGridViewRow row in dataGridView1.Rows)
            {
                if (row.IsNewRow) continue;

                var gt = row.Cells["GioiTinh"].Value?.ToString();
                if (gt == "Nam") tongNam++;
                else if (gt == "Nữ") tongNu++;
            }

            textBox4.Text = tongNam.ToString();
            textBox5.Text = tongNu.ToString();
        }

        private void button2_Click(object sender, EventArgs e)
        {
            string mssv = textBox1.Text.Trim();
            int rowIndex = -1;

            foreach (DataGridViewRow row in dataGridView1.Rows)
            {
                if (row.IsNewRow) continue;
                if (row.Cells["MSSV"].Value?.ToString() == mssv)
                {
                    rowIndex = row.Index;
                    break;
                }
            }

            if (rowIndex == -1)
            {
                MessageBox.Show("KHONG TIM THAY MSSV CAN XOA!", "THONG BAO", MessageBoxButtons.OK, MessageBoxIcon.Error);
                return;
            }

            var result = MessageBox.Show("BAN CO CHAC XOA SINH VIEN NAY?",
                                         "XAC NHAN XOA",
                                         MessageBoxButtons.YesNo,
                                         MessageBoxIcon.Question);
            if (result == DialogResult.Yes)
            {
                dataGridView1.Rows.RemoveAt(rowIndex);
                MessageBox.Show("DA XOA SINH VIEN THANH CONG!",
                                "THONG BAO",
                                MessageBoxButtons.OK,
                                MessageBoxIcon.Information);
                UpdateGenderCounts();
            }
        }
    }
}
